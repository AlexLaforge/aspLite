<%
dim uploadsDirVar, filesize, filename
uploadsDirVar = server.MapPath ("uploads") 

dim upload
Set upload = aspL.plugin("upload")

upload.Save uploadsDirVar

dim ks, fileKey, strMessage
ks = Upload.UploadedFiles.keys
if (UBound(ks) <> -1) then
	for each fileKey in Upload.UploadedFiles.keys
		
		filesize=Upload.UploadedFiles(fileKey).Length
		filename=Upload.UploadedFiles(fileKey).filename
				
		body=body & "<p>The file <strong>" & filename & " (" & round(filesize/1024,0) & " kB)</strong> was successfully uploaded (and removed again).</p>"
		
		'for security reasons, I immediately remove the uploaded file.
		Upload.UploadedFiles(fileKey).delete()
		
	next
end if



%>