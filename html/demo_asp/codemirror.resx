<script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.52.2/codemirror.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.52.2/mode/vbscript/vbscript.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/codemirror/5.52.2/codemirror.min.css">

<p>CodeMirror - <a target="_blank" href="https://codemirror.net/">https://codemirror.net/</a> - lets you edit (all sorts of) code inline. The textarea below loads a sample ASP file code/demo_asp/codemirrorsample.asp</p>

<!-- also check /code/demo_asp/codemirror.asp -->
<form action="demo.asp" method="post">
	<input type="hidden" name="e" value="codemirror" />
	<input type="hidden" name="saveCodemirror" value="true" />

	<textarea class="form-control" name="codemirror" id="codemirror">[somecode]</textarea>
	<br>
	<input type=submit value=Save class="btn btn-success" />
	[savesuccess]
</form>
<style>
.CodeMirror {
  border: 1px solid #eee;
  height: auto;
}
</style>
<script>
  var editor = CodeMirror.fromTextArea(document.getElementById('codemirror') , {
    lineNumbers: true,
	isASP: true	
  });
</script>
