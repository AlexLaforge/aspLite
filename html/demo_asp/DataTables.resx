<p>See <a target="_blank" href="https://datatables.net/">DataTables</a> jQuery plugin</p>

<link rel="stylesheet" href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css">
<script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>

<hr>

<h3>HTML table:</h3>

<table style="visibility:hidden" id="myTable" class="stripe" style="width:100%">
[datatable]
</table>

<hr>

<h3>JSON data:</h3>

<table id="jsExample" class="stripe" style="width:100%">
	<thead>
		<tr>
			<th>id</th>
			<th>First name</th>
			<th>Last name</th>			
		</tr>
	</thead>
</table>

<script>
$(document).ready( function () {	

	//html table
	$('#myTable').css('visibility','visible');
    $('#myTable').DataTable();
	
	//json data
	$('#jsExample').DataTable({
	
		 "ajax": {
            "url": "demo.asp?e=json_datatables",
            "dataSrc": "aspLrecords"
			},		
		"columns": [
            { "data": "id" },
            { "data": "Firstname" },
            { "data": "Lastname" }
			]
			
	});
});
</script>