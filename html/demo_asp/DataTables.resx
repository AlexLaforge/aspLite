<p>See <a target="_blank" href="https://datatables.net/">DataTables</a> jQuery plugin</p>

<link rel="stylesheet" href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css">
<script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>

<hr>

<h3>HTML table:</h3>

<table style="visibility:hidden" id="myTable" class="table table-striped table-bordered" style="width:100%">
[datatable]
</table>

<hr>

<h3>JSON data:</h3>

<table id="jsExample" class="table table-striped table-bordered" style="width:100%">
	<thead>
		<tr>
			<th>id</th>
			<th>text</th>
			<th>number</th>
			<th>boolean</th>
			<th>date</th>			
		</tr>
	</thead>
</table>

<script>
$(document).ready( function () {	

	//html table
	$('#myTable').css('visibility','visible');
    $('#myTable').DataTable({
		"columnDefs": [{"targets": '_all',"render":$.fn.dataTable.render.text()}]
	});
	
	//json data
	$('#jsExample').DataTable({
	
		"columnDefs": [{"targets": '_all',"render":$.fn.dataTable.render.text()}],
	
		 "ajax": {"url": "demo.asp?e=json_datatables","dataSrc": "aspLrecords"},	
		 
		"columns": [
            { "data": "id",render: $.fn.dataTable.render.text() },
            { "data": "text",render: $.fn.dataTable.render.text() },
            { "data": "number",render: $.fn.dataTable.render.text() },
			{ "data": "boolean",render: $.fn.dataTable.render.text() },
			{ "data": "date",render: $.fn.dataTable.render.text() }			
			]
			
	});
	
});
</script>